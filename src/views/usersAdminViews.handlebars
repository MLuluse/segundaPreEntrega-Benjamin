<div class="container">
    <hr>
    <div class="card">
        <div class="card-header titles-log-reg text-center text-info m-2">
            <h2>Panel de Usuarios</h2>
        </div>
    </div>
    <a class="btn btn-primary" href="/products"> Volver </a>
    <hr />
    <table class="table table-bordered table-striped table-hover mt-5 text-center align-middle" id="productsTable">
        <thead class="table-dark">
            <tr>
                <th>Nombre Completo</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Actualizar Rol</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody id="tbody">
            {{#each users}}
                <tr>
                    <td>{{this.full_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.role}}</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="changeRole('{{this.email}}')">Cambiar el Rol</button>
                    </td>
                    <td>
                        <button
                            class="btn btn-danger"
                            onclick="deleteUser('{{this.email}}')"
                        >
                            ❌
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="container text-center">
        <div class="mt-5">
            <a onclick="removeInactiveUsers()" class="btn btn-secondary btn-lg btn-block">Eliminar los usarios que llevan 48 hs inactivos</a>
        </div>
    </div>
</div>
<script>
    changeRole = (email) => {
     fetch(`/api/users/premium/${email}` , {
            method: 'get',
            headers: {
                "Content-Type": "application/json"
            }
        })
        .then(result => result.json())
        .then(result => {
            if (result.status === 'error') throw new Error(result.error)
            alert(`Cambio el Role del user`)
            setTimeout(()=>{
                location.reload()
            },1000)

        })
        .catch(err => alert(`Ocurrió un error :(\n${err}`))


    }
</script>
