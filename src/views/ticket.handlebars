<body>
    <h1>Ticket de Compra</h1>
    <p><strong>Comprador:</strong> {{ticket.purchaser}}</p>
    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Titulo</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            <!-- Itera sobre los productos en el ticket -->
            {{#each ticket.products}}
            <tr>
                <td>{{this.product._id}}</td>
                <td>{{this.product.title}}</td>
                <td>{{this.product.price}}</td>
                <td>{{this.this.quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="total">
        <strong>Total: {{ticket.amount}}</strong>
    </div>
    <h3>¡Gracias por tu compra! </h3>
    <h3>En unos minutos recibira un email con esta informaciòn</h3>
</body>
